{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "./lib",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*"]
}